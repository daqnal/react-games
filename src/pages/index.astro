---
import { SITE_TITLE } from "../consts.ts";
import Layout from '../layouts/Layout.astro';
import App from "../components/Meta/App.jsx";
---

<Layout title={SITE_TITLE}>
	<main>
		<div id="content-wrapper" class="bg-base-200/90">
		  <App client:load/>
		</div>
	</main>
</Layout>

<style>
	
	main {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	#content-wrapper {
		width: 97vw;
		height: 97vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		border-radius: var(--rounded-box);
		backdrop-filter: blur(50px);
	}

</style>
